{
    "name": "galaxon/math",
    "description": "Immutable PHP classes for Complex and Rational number arithmetic with comprehensive mathematical operations.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "math",
        "complex",
        "rational",
        "fraction",
        "arithmetic",
        "immutable",
        "trigonometry"
    ],
    "authors": [
        {
            "name": "Shaun Moss",
            "email": "shaun@astromultimedia.com"
        }
    ],
    "homepage": "https://github.com/mossy2100/Galaxon-PHP-Math",
    "support": {
        "issues": "https://github.com/mossy2100/Galaxon-PHP-Math/issues",
        "source": "https://github.com/mossy2100/Galaxon-PHP-Math"
    },
    "require": {
        "php": "^8.4",
        "galaxon/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "galaxon/coding-standard": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Math\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Math\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf -vp",
        "check": "vendor/bin/phpcs -s",
        "report": "vendor/bin/phpcs -q --report=summary",
        "analyze": "vendor/bin/phpstan analyze -l 9",
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml --do-not-cache-result",
        "coverage": "php scripts/coverage-check.php",
        "quality": [
            "@fix",
            "@check",
            "@analyze",
            "@test",
            "@coverage"
        ]
    }
}
